<div class="row">
  <div class="span1 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: 'true' do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br />
    <% end %>
      <span id="votes_comment_<%=comment.id%>"><%= pluralize(comment.total_votes, "vote") %></span>
    <% if logged_in? %>
      <br />
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: 'true' do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>

  </div>

  <div class="span8 well">
    <p><%= comment.body %></p>
    <small>
    <% if show_title %>
      Written about <%= link_to comment.post.title, post_path(comment.post) if show_title %>
    <% end %>
      by <%= comment.creator.username %> on <%= fix_time(comment.created_at) %></small>
  </div>
</div>