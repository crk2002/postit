<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :phone, "Cell phone number (US only, for optional 2-factor authentication)" %>
  <%= f.text_field :phone %>
  <br/>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>